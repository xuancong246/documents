.navbar-right(ng-controller="mvNavBarLoginCtrl as vm")
  form.navbar-form(ng-hide="vm.identity.isAuthenticated()")
    ul.nav.navbar-nav
      li
        a(href="/signup") Sign Up
    .form-group
      input.form-control(placeholder="Email", ng-model="vm.model.username")
    .form-group
      input.form-control(type="password", placeholder="Password", ng-model="vm.model.password")
    button.btn.btn-primary(ng-click="vm.signIn()") Sign In
  ul.nav.navbar-nav.navbar-right(ng-show="vm.identity.isAuthenticated()")
    li.dropdown
      a.dropdown-toggle(href="", data-toggle="dropdown")
        | {{vm.identity.currentUser.firstName + " " + vm.identity.currentUser.lastName}}
        b.caret
      ul.dropdown-menu
        li(ng-show="vm.identity.currentUser.isAdmin()")
          a(href="/admin/users") User Admin
        li
          a(href="/profile") Profile
        li
          a(href="/signout", ng-click="vm.signOut()") Sign Out
