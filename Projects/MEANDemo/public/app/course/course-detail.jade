.container
  h1 {{ vm.model.course.title }}
  .row
    .col-md-6
      h3(ng-show="{{ vm.model.course.featured }}") Featured
      h3 Published on {{ vm.model.course.published | date:'dd-MMM-yyyy' }}

    .col-md-6
      .panel.panel-primary
        .panel-heading Tags
        .panel-body
          div(ng-repeat="tag in vm.model.course.tags") {{ tag }}
